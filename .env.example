# PointBridge Rewards Application - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION (REQUIRED)
# =============================================================================
# Get these from your Supabase project settings
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =============================================================================
# DATABASE CONFIGURATION (OPTIONAL - for local development)
# =============================================================================
# Only needed if using local PostgreSQL instead of Supabase
VITE_DB_HOST=localhost
VITE_DB_PORT=5432
VITE_DB_NAME=ignite_rewards
VITE_DB_USER=postgres
VITE_DB_PASSWORD=your_secure_database_password
VITE_DATABASE_URL=postgresql://postgres:your_password@localhost:5432/ignite_rewards

# =============================================================================
# BLOCKCHAIN CONFIGURATION (OPTIONAL)
# =============================================================================
# Solana RPC Configuration
VITE_SOLANA_RPC_URL=https://api.devnet.solana.com
VITE_SOLANA_NETWORK=devnet

# Ethereum RPC Configuration (if using Ethereum features)
VITE_ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/your_infura_project_id
VITE_ETHEREUM_NETWORK=sepolia

# =============================================================================
# EXTERNAL API CONFIGURATION (OPTIONAL)
# =============================================================================
# API Ninjas - for city validation and autocomplete
# Get your API key from: https://api-ninjas.com/
VITE_API_NINJAS_KEY=your_api_ninjas_key_here

# =============================================================================
# ADMIN CONFIGURATION (OPTIONAL)
# =============================================================================
# Admin credentials for system access
VITE_ADMIN_EMAIL=admin@yourdomain.com
VITE_ADMIN_PASSWORD=your_secure_admin_password

# =============================================================================
# APPLICATION SETTINGS (OPTIONAL)
# =============================================================================
# Debug and development settings
VITE_APP_DEBUG=false
VITE_ENABLE_DEBUG_PANEL=false
VITE_ENABLE_TEST_DATA=false
VITE_ENABLE_MOCK_AUTH=false

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Never commit actual .env files to version control
# 2. Use strong, unique passwords for all credentials
# 3. Rotate API keys regularly
# 4. Use different credentials for development, staging, and production
# 5. Keep your Supabase anon key secure - it provides database access
# 6. API Ninjas key is optional - city validation will be disabled if not provided
