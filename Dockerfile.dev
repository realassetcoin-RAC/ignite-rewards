# Development Dockerfile
FROM oven/bun:1-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json bun.lock* ./

# Install dependencies
RUN bun install

# Copy source code
COPY . .

# Expose port
EXPOSE 8084

# Start development server
CMD ["bun", "run", "dev", "--host", "0.0.0.0"]
